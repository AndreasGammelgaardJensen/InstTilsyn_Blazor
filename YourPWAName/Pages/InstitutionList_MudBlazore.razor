			<MudTable Items="@searchInstitutions" Hover="true" MultiSelection="true" Dense="true" FixedHeader="true" Height="100vh" Class="parent-card">
				<ToolBarContent>
					<MudText Typo="Typo.h6">Institutions</MudText>
