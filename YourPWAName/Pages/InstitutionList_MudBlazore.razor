	<Modal @ref="modal" Title="Modal title" Style="margin-top: 100px">
		<BodyTemplate>
			<InstitutionSettings @ref="institutionSettingsComponent" />
		</BodyTemplate>
		<FooterTemplate>
			<Button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">Close</Button>
			<Button Color="ButtonColor.Primary" @onclick="OnSaveChanges">Save changes</Button>
		</FooterTemplate>
	</Modal>

</div>


