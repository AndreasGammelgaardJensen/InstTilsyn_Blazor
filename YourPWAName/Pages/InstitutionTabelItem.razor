@code {

    [Parameter]
    public InstitutionTableModel model { get; set; }


    private string GetBackground()
    {
        var enumTypeClass = "";
        switch (model.InstitutionFrontPageModel.TypeEnum)
        {
            case InstitutionTypeEnum.Integreret:
                enumTypeClass = "blue";
                break;
            case InstitutionTypeEnum.Dagpleje:
                enumTypeClass = "purple";
                break;

            case InstitutionTypeEnum.Boernehave:
                enumTypeClass = "yellow";
                break;
            default:
                enumTypeClass = "green";
                // Handle the default case (if none of the specified cases match)
                break;
        }
        return "background-color: " + enumTypeClass;
    }



}
