@using ModelsLib.Models
@using ModelsLib.Models.TabelModels

<div class="card" style="@GetBackground()">
    <div class="name">
        <div class="pladser">
            <h4>@model.InstitutionFrontPageModel.Name</h4>
            <p><strong>Pladser</strong></p>
            <p>Børnehave: @model.InstitutionFrontPageModel.pladser.BoernehavePladser</p>
            <p>Vuggestue: @model.InstitutionFrontPageModel.pladser.VuggestuePladser</p>
            <p>Dagpleje: @model.InstitutionFrontPageModel.pladser.DagplejePladser </p>
        </div>
        <div class="rapport">
            <p style="margin-right: 5px">Tilsynsrapport:</p>
            <a href="@model.InstitutionFrontPageModel.InstitutionTilsynsRapports.First().fileUrl">@model.InstitutionFrontPageModel.InstitutionTilsynsRapports.First().fileUrl </a>
        </div>
        
        
        
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    @foreach (var cr in @model.CriteriaModel)
                    {

                        <th class="align-text-top m">
                            <div>
                                <b>@cr.CategoriText</b>
                            </div>

                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var cr in @model.CriteriaModel)
                    {

                        <td class="align-text-top m">
                            <div>
                                <b>@cr.Indsats</b>
                            </div>

                        </td>
                    }
                </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
</div>


